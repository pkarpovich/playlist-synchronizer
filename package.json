{
  "name": "playlist-synchronizer",
  "version": "1.1.0",
  "description": "The app allows to sync playlists between music services",
  "type": "module",
  "exports": "./src/index.ts",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "format": "prettier 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "check-types": "tsc --noemit -p tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "changeset": "changeset",
    "publish": "changeset tag",
    "version": "changeset version"
  },
  "keywords": [
    "yandex",
    "yandex-music",
    "spotify",
    "synchronizer"
  ],
  "author": "Pavel Karpovich <pavel.karpovich@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.3",
    "@types/signale": "^1.4.4",
    "@types/spotify-web-api-node": "^5.0.7",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.24.3",
    "awilix": "^7.0.3",
    "croner": "^4.3.15",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.1.1",
    "lowdb": "^3.0.0",
    "signale": "^1.4.0",
    "spotify-web-api-node": "^5.0.2",
    "yandex-short-api": "^1.0.0",
    "yup": "^0.32.11"
  },
  "peerDependencies": {
    "eslint-plugin-import": ">=2.25.3 <3.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:pkarpovich/playlist-synchronizer.git"
  }
}
