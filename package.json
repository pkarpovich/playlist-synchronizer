{
  "name": "playlist-synchronizer",
  "version": "1.2.2",
  "description": "The app allows to sync playlists between music services",
  "type": "module",
  "exports": "./src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx --watch src/index.ts",
    "build": "tsc",
    "format": "prettier 'src/**/*.ts'",
    "format:fix": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "check-types": "tsc --noemit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "changeset": "changeset",
    "publish": "changeset tag",
    "version": "changeset version"
  },
  "keywords": [
    "yandex",
    "yandex-music",
    "spotify",
    "synchronizer"
  ],
  "author": "Pavel Karpovich <pavel.karpovich@outlook.com>",
  "license": "MIT",
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/express": "^4.17.17",
    "@types/node": "^22.13.0",
    "@types/signale": "^1.4.4",
    "@types/spotify-web-api-node": "^5.0.7",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0",
    "awilix": "^8.0.0",
    "croner": "^6.0.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^6.0.1",
    "lowdb": "^5.1.0",
    "signale": "^1.4.0",
    "spotify-web-api-node": "^5.0.2",
    "yandex-short-api": "^1.0.0",
    "yup": "^1.0.2"
  },
  "peerDependencies": {
    "eslint-plugin-import": ">=2.25.3 <3.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:pkarpovich/playlist-synchronizer.git"
  },
  "pnpm": {
    "overrides": {
      "axios@<0.21.1": ">=0.21.1",
      "follow-redirects@<1.14.8": ">=1.14.8",
      "follow-redirects@<1.14.7": ">=1.14.7",
      "axios@<0.21.2": ">=0.21.2"
    }
  }
}
