{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "typeRoots": [
      "src/@types", "node_modules/@types"
    ],
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
